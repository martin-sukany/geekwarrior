
# Define of INBOX view
report.in.columns           = id,description
report.in.description       = Inbox
report.in.filter            = status:pending limit:page (+in)
report.in.labels            = ID,Description

# Define GTD review report
report.gtd.columns=id,project,description,tags,due
report.gtd.description=List GTD style task
report.gtd.filter=status:pending (-in) 
report.gtd.labels=ID,Project,Task,Contexts,Due
report.gtd.sort=project+,due+,tags+,description+

# Some sample context definitions
context.home=+@home or +home or +computer or +@computer or +online or +@online
context.errands=+errands or +@errands
context.work=+ibm or +@ibm or +work or +@work
context.meeting=+meeting or +@meeting
